# ==============================
# üåç APP CONFIG
# ==============================
NODE_ENV=development        # development | production
PORT=5000                  # Backend server port

# ==============================
# DATABASE
# ==============================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL="postgresql://user:password@localhost:5432/fake_db?sslmode=disable"

# ==============================
# AUTH (JWT + SESSION)
# ==============================
BETTER_AUTH_SECRET=fake_auth_secret_123456   # Used for session encryption (keep strong in prod)
BETTER_AUTH_URL=http://localhost:5000        # Backend base URL

ACCESS_TOKEN_SECRET=fake_access_secret       # JWT access token secret
REFRESH_TOKEN_SECRET=fake_refresh_secret     # JWT refresh token secret

ACCESS_TOKEN_EXPIRES_IN=1d                   # Access token expiry
REFRESH_TOKEN_EXPIRES_IN=7d                  # Refresh token expiry

BETTER_AUTH_SESSION_TOKEN_EXPIRES_IN=1d      # Session expiry
BETTER_AUTH_SESSION_TOKEN_UPDATE_AGE=1d      # Session refresh interval

# ==============================
# EMAIL (SMTP)
# ==============================
EMAIL_SENDER_SMTP_USER=fake@email.com        # Sender email
EMAIL_SENDER_SMTP_PASS=fakepassword123       # App password (NOT real password)
EMAIL_SENDER_SMTP_HOST=smtp.example.com      # SMTP server
EMAIL_SENDER_SMTP_PORT=587                   # 587 (TLS) or 465 (SSL)
EMAIL_SENDER_SMTP_FROM=fake@email.com        # From address

# ==============================
# GOOGLE OAUTH
# ==============================
GOOGLE_CLIENT_ID=fake-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=fake-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/callback/google

# ==============================
# FRONTEND
# ==============================
FRONTEND_URL=http://localhost:3000           # Frontend app URL (CORS / redirect)

# ==============================
# CLOUDINARY (FILE UPLOAD)
# ==============================
CLOUDINARY_CLOUD_NAME=fake_cloud
CLOUDINARY_API_KEY=1234567890
CLOUDINARY_API_SECRET=fake_cloudinary_secret

# ==============================
# STRIPE (PAYMENTS)
# ==============================
STRIPE_SECRET_KEY=sk_test_fake_key_123456    # Server-side secret key
STRIPE_WEBHOOK_SECRET=whsec_fake_webhook_secret  # Webhook verification secret

# ==============================
# DEFAULT ADMIN (SEED DATA)
# ==============================
SUPER_ADMIN_EMAIL=superadmin@gmail.com
SUPER_ADMIN_PASSWORD=1234678                

# ==============================
# SECURITY NOTES
# ==============================
# - Never commit real .env to GitHub
# - Use .env.example for sharing
# - Rotate secrets if leaked
# - Use strong random values in production